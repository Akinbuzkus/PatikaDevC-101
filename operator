using System;

namespace Operatorler{
    class Program{
        static void Main(string[] args){

            // atama ve işlemli atama 
            int x=3;
            int y=2;
            y=y+2;

            Console.WriteLine(y);
            y+=2; // işlemli atama
            Console.WriteLine(y);
            y/=1;
            Console.WriteLine(y);
            y*=2;
            Console.WriteLine(y);
            


        }
    }
}
